#include <bits/stdc++.h>
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    string s, temp;
    cin >> s;
    temp = s;
    reverse(temp.begin(), temp.end());
    if (temp == s)
        cout << "1\n";
    else
        cout << "0\n";
    return 0;
}