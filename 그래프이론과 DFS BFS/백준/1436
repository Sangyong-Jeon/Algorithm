#include <bits/stdc++.h>
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    int n, cnt = 0;
    cin >> n;
    int i = 666;
    while (true)
    {
        int temp = i;
        while (temp >= 666)
        {
            if (temp % 1000 == 666)
            {
                cnt++;
                break;
            }
            temp /= 10;
        }
        if (n == cnt)
            break;
        i++;
    }
    cout << i << '\n';
    return 0;
}